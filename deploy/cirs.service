[Unit]
Description=CIRS - Community Inventory Resource System
Documentation=https://github.com/cutemo0953/CIRS
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/CIRS/backend
Environment="PATH=/home/pi/CIRS/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pi/CIRS/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
